{
  "name": "kanban-dashboard",
  "version": "1.0.0",
  "description": "Dashboard Kanban + Catálogo E-commerce - Prueba Técnica Frontend Senior",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
